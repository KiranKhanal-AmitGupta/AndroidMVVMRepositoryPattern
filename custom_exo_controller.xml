<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/controller_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:layout_gravity="center|bottom"
    android:animateLayoutChanges="true"
    android:background="@drawable/controller_gradient_background"
    android:orientation="vertical"
    android:padding="@dimen/controller_margin">

    <ImageView
        android:id="@+id/img_water_mark_controller"
        android:layout_width="@dimen/controller_logo_width"
        android:layout_height="@dimen/controller_logo_height"
        android:layout_alignParentRight="true"
        android:alpha="0.7"
        android:src="@android:drawable/ic_menu_report_image"
        android:visibility="visible" />

    <RelativeLayout
        android:id="@+id/upper_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_water_mark_controller"
        android:layout_marginStart="@dimen/controller_channel_layout_margin_start"
        android:layout_marginTop="@dimen/controller_channel_layout_margin_top"
        android:layout_marginEnd="@dimen/controller_channel_layout_margin_end"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_content_logo"
            android:layout_width="@dimen/controller_channel_logo_width1"
            android:layout_height="@dimen/controller_channel_logo_height1"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:src="@android:drawable/ic_menu_report_image" />

        <TextView
            android:id="@+id/txt_content_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/controller_current_program_margin"
            android:layout_toRightOf="@id/img_content_logo"
            android:text="On air program"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_view_medium" />

        <TextView
            android:id="@+id/btn_gotoLive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginStart="@dimen/controller_gotoLive_margin"
            android:layout_toRightOf="@id/txt_content_name"
            android:background="@drawable/fav_selector"
            android:focusable="true"
            android:paddingStart="@dimen/controller_gotoLive_start_end"
            android:paddingTop="@dimen/controller_gotoLive_top_bottom"
            android:paddingEnd="@dimen/controller_gotoLive_start_end"
            android:paddingBottom="@dimen/controller_gotoLive_top_bottom"
            android:text="GOTO LIVE"
            android:textAllCaps="true"
            android:visibility="gone" />

        <TextView
            android:id="@+id/btn_set_fav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginStart="@dimen/controller_fav_margin"
            android:layout_toRightOf="@id/btn_gotoLive"
            android:background="@drawable/fav_selector"
            android:focusable="true"
            android:paddingStart="@dimen/controller_fav_start_end"
            android:paddingTop="@dimen/controller_fav_top_bottom"
            android:paddingEnd="@dimen/controller_fav_start_end"
            android:paddingBottom="@dimen/controller_fav_top_bottom"
            android:text="set fav"
            android:textAllCaps="true" />

        <ImageView
            android:id="@+id/img_fav_val"
            android:layout_width="@dimen/controller_channel_fav_image_width_height"
            android:layout_height="@dimen/controller_channel_fav_image_width_height"
            android:layout_centerInParent="true"
            android:layout_marginStart="@dimen/controller_fav_image_margin"
            android:layout_toRightOf="@id/btn_set_fav"
            android:focusable="false"
            android:visibility="invisible"
            android:src="@android:drawable/ic_menu_report_image" />

        <TextView
            android:id="@+id/txt_content_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginTop="@dimen/controller_channel_no_top_bottom"
            android:layout_marginEnd="@dimen/controller_channel_no_start_end"
            android:focusable="false"
            android:visibility="invisible"
            android:text="728"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_view_extra_large"
            android:textStyle="bold" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/seek_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/upper_layout"
        android:layout_margin="@dimen/controller_seek_margin"
        android:orientation="horizontal">

        <TextView
            android:id="@id/exo_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:includeFontPadding="false"
            android:paddingLeft="@dimen/controller_exo_position"
            android:paddingRight="@dimen/controller_exo_position"
            android:text="00:00"
            android:textColor="#FFBEBEBE"
            android:textSize="@dimen/text_view_extra_medium"
            android:textStyle="bold"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layout_live_dvr_anotate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginEnd="@dimen/controller_channel_red_button_margin"
                android:gravity="center"
                android:visibility="invisible"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/red_btn"
                    android:layout_width="@dimen/controller_channel_red_button_width_height"
                    android:layout_height="@dimen/controller_channel_red_button_width_height"
                    android:src="@drawable/live_round" />

                <TextView
                    android:id="@+id/txt_live_dvr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/controller_channel_red_button_text_margin"
                    android:text="live"
                    android:textAllCaps="true"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/text_view_extra_medium" />

            </LinearLayout>

            <com.google.android.exoplayer2.ui.DefaultTimeBar
                android:id="@id/exo_progress"
                android:layout_width="match_parent"
                android:layout_height="@dimen/controller_channel_exo_progress_height"
                android:focusable="true"
                android:focusedByDefault="true"
                android:importantForAccessibility="yes"
                android:nextFocusUp="@id/btn_set_fav"
                app:buffered_color="@color/lightGrey"
                app:played_color="@color/seek_played_color"
                app:scrubber_color="@color/red_color"
                app:unplayed_color="@color/lightGrey" />

        </LinearLayout>

        <TextView
            android:id="@id/exo_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:includeFontPadding="false"
            android:paddingLeft="@dimen/controller_channel_exo_progress_duration_padding"
            android:paddingRight="@dimen/controller_channel_exo_progress_duration_padding"
            android:text="00:00"
            android:textColor="#FFBEBEBE"
            android:textSize="@dimen/text_view_extra_medium"
            android:textStyle="bold"
            android:visibility="gone" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/controller"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seek_layout"
        android:layout_marginBottom="@dimen/controller_setting_margin"
        android:paddingLeft="@dimen/controller_setting_padding"
        android:paddingEnd="@dimen/controller_setting_padding">

        <LinearLayout
            android:id="@+id/layout_settings"
            android:layout_width="@dimen/controller_setting_image_width1"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/controller_setting_layout_margin_padding"
            android:background="@drawable/setting_selector"
            android:clickable="true"
            android:focusable="true"
            android:orientation="vertical"
            android:padding="@dimen/controller_setting_layout_margin_padding">

            <ImageView
                android:id="@+id/img_setting"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/controller_setting_logo_width_height1"
                android:layout_gravity="center"
                android:src="@drawable/ic_settings_white_48dp" />

            <TextView
                android:id="@+id/txt_abr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_view_extra_medium" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/exo_prev"
                style="@style/ExoMediaButton.Previous"
                android:layout_width="@dimen/controller_exo_button_width_height1"
                android:layout_height="@dimen/controller_exo_button_width_height1"
                android:background="@drawable/setting_selector"
                android:src="@drawable/ic_media_previous" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <ImageButton
                    android:id="@id/exo_play"
                    style="@style/ExoMediaButton"
                    android:layout_width="@dimen/controller_exo_button_width_height1"
                    android:layout_height="@dimen/controller_exo_button_width_height1"
                    android:layout_gravity="center"
                    android:background="@drawable/setting_selector"
                    android:src="@drawable/ic_media_play" />

                <ImageButton
                    android:id="@id/exo_pause"
                    style="@style/ExoMediaButton"
                    android:layout_width="@dimen/controller_exo_button_width_height1"
                    android:layout_height="@dimen/controller_exo_button_width_height1"
                    android:layout_gravity="center"
                    android:background="@drawable/setting_selector"
                    android:src="@drawable/ic_media_pause" />

            </FrameLayout>

            <ImageButton
                android:id="@+id/next_exo"
                style="@style/ExoMediaButton.Next"
                android:layout_width="@dimen/controller_exo_button_width_height1"
                android:layout_height="@dimen/controller_exo_button_width_height1"
                android:background="@drawable/setting_selector"
                android:src="@drawable/ic_media_next" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/epg_layout"
            android:layout_width="@dimen/controller_epg_image_width1"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginEnd="@dimen/controller_epg_layout_margin_padding"
            android:background="@drawable/setting_selector"
            android:clickable="true"
            android:focusable="true"
            android:orientation="vertical"
            android:padding="@dimen/controller_epg_layout_margin_padding">

            <ImageView
                android:id="@+id/epg_logo"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/controller_epg_logo_width_height1"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/controller_epg_image_margin"
                android:src="@drawable/ic_epg" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:text="Epg/dvr"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_view_extra_medium" />

        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>